extends layout.pug
block content
    form(action="/books/search" method="post")
      input(type="text" name="keyword" placeholder="enter a key word")
      input(type="submit" value="Search" class="search-button")
    h1 Books
    p
      a.button(href='/books/new') Create New Book
    ul.pagination
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr.books
            td
              a(href=`/books/${book.id}`) #{book.title}
            td #{book.author}
            td #{book.genre}
            td #{book.year}

